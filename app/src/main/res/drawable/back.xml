<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#76c156" />
            <gradient android:angle="-90" android:startColor="#76c156" android:endColor="#76c156"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="30dip" android:color="#76c156 " />
            <solid android:color="#76c156"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#2929" />
            <gradient android:angle="-180" android:startColor="#76c156" android:endColor="#76c156 " />
        </shape>
    </item>
</selector>