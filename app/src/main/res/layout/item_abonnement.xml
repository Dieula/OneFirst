<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_width_70dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_60dp"
        android:background="@color/white"
        android:padding="10dp">

    <ImageView
        android:id="@+id/ivAbonnemnt"
        android:layout_width="@dimen/height_width_40dp"
        android:layout_height="@dimen/height_width_30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iconlogo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pad_margin_10dp"
        android:layout_toEndOf="@+id/ivAbonnemnt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAbonnement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="@string/abonnement"
            android:textSize="@dimen/height_width_15dp" />


    </LinearLayout>



        <ImageView
            android:layout_width="@dimen/pad_margin_10dp"
            android:layout_height="@dimen/height_width_20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
    </RelativeLayout>

