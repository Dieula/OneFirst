<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnew">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backnew"/>

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="109dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:background="@drawable/connexion"
        android:fontFamily="SFProDisplay-Medium"
        android:text="@string/connexion"
        android:textColor="#76c156"
        android:textSize="14sp"
        tools:ignore="MissingConstraints,NotSibling,RtlHardcoded" />


    <Button
        android:id="@+id/btnInscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inscription"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="SFProDisplay-Medium"
        android:textColor="#fff"
        android:background="@drawable/register"/>


</RelativeLayout>