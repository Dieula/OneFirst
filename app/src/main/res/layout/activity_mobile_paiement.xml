<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MobilePaiementActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pad_margin_10dp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/pad_margin_10dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez votre numero de telephone"
            android:textColor="#36000000"
            android:layout_marginTop="@dimen/height_width_50dp"
            android:textSize="@dimen/height_width_15dp" />

        <EditText
            android:id="@+id/tvTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/height_width_15dp"
            android:hint="Numero de telephone"
            android:layout_marginTop="@dimen/height_width_50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="YonClick pay est un service de paiement qui..."
            android:layout_marginTop="50dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:paddingEnd="@dimen/pad_margin_10dp"
            android:layout_marginTop="@dimen/pad_margin_100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mobile"
            android:hint="Payer"

            android:textColorHint="#fff"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>