<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@color/white"
    tools:context=".activity.activity.MobilePaiementActivity">

    <!--android:ems="8"-->

    <include
        android:id="@+id/toolbarTop"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pad_margin_10dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/pad_margin_10dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez votre numero de telephone"
            android:textColor="#36000000"
            android:layout_marginTop="@dimen/height_width_50dp"
            android:textSize="@dimen/height_width_15dp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_marginTop="@dimen/height_width_50dp">

            <EditText
                android:id="@+id/tvTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:maxLength="8"
                android:inputType="phone"
                android:hint="Numero de telephone"/>

        </android.support.design.widget.TextInputLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="YonClick pay est un service de paiement qui..."
            android:layout_marginTop="50dp"/>


        <Button
            android:id="@+id/Iv_Payer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:paddingEnd="@dimen/pad_margin_10dp"
            android:layout_marginTop="@dimen/pad_margin_100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mobile"
            android:hint="Payer"
            android:onClick="OnLogButton"
            android:textColorHint="#fff"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>