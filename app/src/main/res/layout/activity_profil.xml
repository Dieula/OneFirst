<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail.DetailsProduitActivity">

    <include
        android:id="@+id/toolbarTop"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_below="@+id/toolbarTop">



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#e2f1db">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vpImageSlider"
            android:layout_width="@dimen/height_width_100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_width_30dp"
            android:src="@drawable/iconlogo" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Dieula" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/relativeLayout">

        <ListView
            android:id="@+id/rvProfilList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_width_20dp"
            android:background="#fff"
            android:divider="@null"
            android:dividerHeight="0dp"/>




        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/height_width_20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mobile"
            android:hint="Deconnexion"
            android:textColorHint="#FFF"
            android:textSize="20dp" />


    </LinearLayout>


</RelativeLayout>


</RelativeLayout>




